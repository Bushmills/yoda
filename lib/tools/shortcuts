once                                     \ protect against reloading
provides: +s -s +f -f +r +r shortcuts

: +s shell on ;
: -s shell off ;
: +f forwardrefs on ;                    \ only those during compilation
: -f forwardrefs off ;
: +i instantresolve on  ;                \ resolve interactive refs immediate
: -i instantresolve off  ;

: ?  ( -- )  ( $1 -- )
   dup$ #16 ltype$
   evaluate$ @
   if "on" else "off" then
   type$ cr ;        transient

: shortcuts ( -- )
   "shell"          ?
   "forwardrefs"    ?
   "instantresolve" ?
;
