provides: screensize columns lines
once

: push  ( $1 -- )
      quote$                        \ put double quotes around variable name
      "s[++sp]=" swap$ join$        \ prepend stack push operation
      use$  ;   transient           \ set instruction as run time semantics

create columns ( -- u )     "$COLUMNS" push        inline
create lines   ( -- u )     "$LINES"   push        inline
: screensize   ( -- x y )    columns   lines ;
