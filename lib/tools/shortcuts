provides: +s -s +f -f +r +r shortcuts

loaded lest done                           \ protect against reloading
: +s shell on ;
: -s shell off ;
: +f forwardrefs on ;                      \ only those during compilation
: -f forwardrefs off ;
: +i instantresolve on  ;                \ resolve interactive refs immediate
: -i instantresolve off  ;

: ?  ( -- )  ( $1 -- )
   dup$ #16 ltype$
   evaluate$ @
   if "on" else "off" then
   type$ cr ;

: shortcuts ( -- )
   "shell"          ?
   "forwardrefs"    ?
   "instantresolve" ?
;
trash ?    \ too special case for keeping.
