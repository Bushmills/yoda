provides: vocabulary newwordlist$

needed vocabulary unless omit
need newwordlist$
: vocabulary  ( -- ) ( stream: word )
    word$
    dup$ newwordlist$
    constant$                                         \ constant points to string dp where voc name will be stored
    does> set-context                                 \ index to vocabulary name is also the vocabulary "handle"
;                                                     \ (means also, printing a voc name from "handle":   $@ type$

needed newwordlist$ unless omit
: newwordlist$  ( -- wid )  ( $1 -- )
   here$ $, dup initwordlist ;
