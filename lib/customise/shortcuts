provides: +s -s +f -f +r +r shortcuts

needed +s lest  : +s shell on ;
needed -s lest  : -s shell off ;
needed +f lest  : +f forwardrefs on ;                    \ only those during compilation
needed -f lest  : -f forwardrefs off ;
needed +i lest  : +i instantresolve on  ;                \ resolve interactive refs immediate
needed -i lest  : -i instantresolve off  ;

needed shortcuts unless omit
need ?
: shortcuts ( -- )
   "shell"          ?
   "forwardrefs"    ?
   "instantresolve" ?
;

needed ? unless omit
: ?  ( -- )  ( $1 -- )
   dup$ #16 ltype$
   evaluate$ @
   if "on" else "off" then
   type$ cr ;        
transient
