provides: statusline +l -l
needs: capitalise bold blue fg bg deol .s

create statusline   true ,
2 constant spacing

: +l   statusline on ;
: -l   statusline off
       savecursor
       home deol                    \ empty top line
       restorecursor ;


: show0           ( $1 -- )
        type$
        spacing spaces ;

: show1           ( x -- ) ( $1 -- )
        base @ >r
        decimal
        type$ ': emit 0 u.r
        spacing spaces
        r> base ! ;

: show$           ( $1 $2 -- )
        swap$ type$
        ': emit show0 ;

: status          ( c -- )  ( $1 -- $2 )
        if capitalise
        then append$ ;

: .status         ( -- )
        bold yellow fg  ( blue bg )  deol
        "yoda version " type$ "v" env$ show0
        "bits" bits show1
        "flags" ""
            'f  forwardrefs @     status
            'i  instantresolve @  status
            's  shell @           status
            show$
        "unresolved" #unresolved show1
        "files" #files show1
        "base" base @ show1
        "here" here show1
        "rdepth"  rdepth show1
        "stack:" type$ .s ;

trash status
