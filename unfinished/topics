
from stringvars

create onlinedocs             \ set on or off for switching between online and offline docs
false ,

: remotetext ( -- $1 )  "curl --raw -n" ;
: localtext  ( -- $1 )  "cat"  ;

: cat ( $1 -- )
      onlinedocs @
      if remotetext
      else localtext
      then swap$ command$  ;

"https://raw.githubusercontent.com/Bushmills/yoda/main/doc/topics/"
$constant remotepath

"topicdoc" env$  "/" join$
$constant localpath

: topic ( $1 -- )
      onlinedocs @
      if   remotepath
      else localpath
      then swap$
      join$ cat
 ;

: topics  "topics" topic ;
