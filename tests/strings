#!/usr/local/bin/yoda
"String comparison tests: " type$

need .
create errors 0 ,
: check    ( -- )        
        errors @ ?dup
        if . "errors" 
        else  "No errors"
        then type$ cr  ;

: expected ( x1 x2 -- )
        = 1+ errors +! ;

"abc" "abc"    
        2dup$ $=     true expected
        2dup$ $<    false expected
              $>    false expected

"abc" "abd"    
        2dup$ $=    false expected
        2dup$ $<     true expected
              $>    false expected

"abd" "abc"    
        2dup$ $=    false expected
        2dup$ $<    false expected
              $>     true expected

check
